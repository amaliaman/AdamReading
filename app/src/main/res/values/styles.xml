<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Basic style for letter TextView -->
    <style name="BasicLetter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Style for list of words in LetterActivity -->
    <style name="WordList">
        <item name="android:padding">@dimen/letter_details_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Style for an item in the list of words in LetterActivity -->
    <style name="WordListItem" parent="BasicLetter">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">@dimen/letter_wordlist_size</item>
    </style>

    <!-- Style for single word in MainActivity -->
    <style name="LetterCard" parent="BasicLetter">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/letter_card_size</item>
    </style>

    <!-- Style for name of word in LetterActivity -->
    <style name="LetterName" parent="BasicLetter">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/letter_main_size</item>
        <item name="android:paddingTop">@dimen/half_padding</item>
        <item name="android:paddingBottom">@dimen/half_padding</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Style for navigation hint in LetterActivity -->
    <style name="Nav">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:alpha">0.3</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="AboutItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/default_padding</item>
    </style>

    <style name="AboutItemTitle" parent="AboutItem">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
