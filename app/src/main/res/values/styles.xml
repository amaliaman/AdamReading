<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    
    <!-- Basic style for letter TextView -->
    <style name="BasicLetter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Style for list of words in LetterActivity -->
    <style name="WordList" parent="BasicLetter">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Style for single word in MainActivity -->
    <style name="LetterCard" parent="BasicLetter">
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">40sp</item>
    </style>

    <!-- Style for name of word in LetterActivity -->
    <style name="LetterName" parent="BasicLetter">
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">48sp</item>
    </style>
</resources>
